{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es2021",
        "ESNext.String"
      ],
      "module": "commonjs",
      "outDir": "./dist",
      "strict": false,
      "strictPropertyInitialization": false,
      "baseUrl": "./src",
      "paths": {
        "@modules/*": [
          "modules/*"
        ],
        "@config/*": [
          "config/*"
        ],
        "@shared/*": [
          "shared/*"
        ]
      },
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "downlevelIteration": true,
      "resolveJsonModule": true
    }
  }